@model MVC_Humsafar_Mubarak.ViewModel.DashboardViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<h1 class="display-4 fw-normal">User Dashboard</h1>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Dashboard" asp-action="Create">Create Profile</a>

<div class="album py-5 bg-light">
    <div class="container">
        <h5 class="display-4 fw-normal">Your Profile</h5>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

          
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@Model.CandidateProfile.Photo" width="100%" height="225" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@Model.CandidateProfile.Name</p>
                        <p class="card-text">@Model.CandidateProfile.Age</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Dashboard" asp-action="Detail" asp-route-id="@Model.CandidateProfile.Id"
                                       class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (User.Identity.IsAuthenticated) 
                                    {
                                    <a asp-controller="Dashboard" asp-action="Edit" asp-route-id="@Model.CandidateProfile.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-controller="Dashboard" asp-action="Delete" asp-route-id="@Model.CandidateProfile.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }
                                </div>
                                <small class="text-muted">@Model.CandidateProfile.MaritalStatus</small>
                            </div>
                        </div>
                    </div>
                </div>
            
        </div>
       
    </div>
</div>
